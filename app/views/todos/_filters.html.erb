<div id="filters-actions" class="<%= "hidden" unless @todos.any? %>">
  <span id="todo-count" data-target="todo.activeNumber">
    <%= pluralize @todos.reject(&:completed).size, "item" %> left
  </span>
  <ul id="filters">
    <li>
      <%= link_to "All",
            root_path,
            data: { action: "todo#selectFilter", target: "todo.filter" },
            name: "all",
            class: "selected" %>
    </li>
    <li>
      <%= link_to "Active",
            root_path({completed: false}),
            name: "active",
            data: { action: "todo#selectFilter", target: "todo.filter" } %>
    </li>
    <li>
      <%= link_to "Completed",
            root_path({completed: true}),
            name: "completed",
            data: { action: "todo#selectFilter", target: "todo.filter" } %>
    </li>
  </ul>
  <%= form_with url: destroy_many_todos_path,
                remote: true,
                authenticity_token: true,
                method: :delete,
                id: "destroy_many_todos",
                class: ("hidden" unless @todos.select { |t| t.completed }.size > 0) do %>

    <% @todos.select { |t| t.completed }.map do |todo| %>
      <%= hidden_field_tag "ids[]", todo.id %>
    <% end %>

    <%= button_tag "Clear completed", id: "clear-completed", data: {action: "todo#destroyAll", target: "todo.clear-completed"} %>
    <%= completed_filter_field %>
  <% end %>
</div>
